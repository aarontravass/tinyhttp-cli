{
  "name": "@tinyhttp/cli",
  "description": "CLI to setup tinyhttp apps",
  "version": "1.3.5",
  "type": "module",
  "homepage": "https://tinyhttp.v1rtl.site",
  "funding": {
    "type": "individual",
    "url": "https://github.com/talentlessguy/tinyhttp?sponsor=1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tinyhttp/cli.git"
  },
  "bin": {
    "tinyhttp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.8"
  },
  "keywords": [
    "tinyhttp",
    "router",
    "backend",
    "http",
    "framework",
    "api"
  ],
  "author": "v1rtl",
  "license": "MIT",
  "dependencies": {
    "cac": "^6.7.14",
    "colorette": "^2.0.20",
    "edit-json-file": "^1.7.0",
    "ora": "^7.0.1",
    "undici": "^5.23.0",
    "which-pm-runs": "^1.1.0"
  },
  "scripts": {
    "build": "esbuild src/index.ts --outdir=dist --platform=node --target=node18 --format=esm --packages=external --bundle",
    "test": "uvu -r tsm tests",
    "test:coverage": "c8 --include=src pnpm test",
    "test:report": "c8 report --reporter=text-lcov > coverage.lcov",
    "lint": "eslint . --ext=ts",
    "format": "prettier --check \"./**/*.ts\""
  },
  "devDependencies": {
    "@types/edit-json-file": "^1.7.0",
    "@types/node": "^20.5.0",
    "@types/which-pm-runs": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "c8": "^8.0.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "tsm": "^2.3.0",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  }
}
