{
  "name": "@tinyhttp/cli",
  "description": "CLI to setup tinyhttp apps",
  "version": "1.3.6",
  "type": "module",
  "homepage": "https://tinyhttp.v1rtl.site",
  "funding": {
    "type": "individual",
    "url": "https://github.com/talentlessguy/tinyhttp?sponsor=1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tinyhttp/cli.git"
  },
  "bin": {
    "tinyhttp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.8"
  },
  "keywords": [
    "tinyhttp",
    "router",
    "backend",
    "http",
    "framework",
    "api"
  ],
  "author": "v1rtl",
  "license": "MIT",
  "dependencies": {
    "cac": "^6.7.14",
    "colorette": "^2.0.20",
    "edit-json-file": "^1.7.0",
    "ora": "^7.0.1",
    "which-pm-runs": "^1.1.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "tsx tests/index.test.ts",
    "test:coverage": "c8 tsx --test tests/index.test.ts",
    "test:report": "c8 report --reporter=text-lcov > lcov.info",
    "lint": "eslint . --ext=ts",
    "format": "prettier --check \"./**/*.{ts,md}\"",
    "format:fix": "prettier --write \"./**/*.{ts,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/edit-json-file": "^1.7.2",
    "@types/node": "^20.8.9",
    "@types/which-pm-runs": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "bun-types": "^1.0.7",
    "c8": "^8.0.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "supertest-fetch": "^1.5.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
